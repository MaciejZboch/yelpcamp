<% layout('layouts/boilerplate') %>
    <h1>All campgrounds</h1>
    <div><a href="/campgrounds/new">Add that shit!</a></div>
    <ul>
        <% for (let campground of campgrounds) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img crossorigin="anonymous" class="img-fluid" src="<%=campground.images[0].url%>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=campground.title%>
                            </h5>
                            <p class="card-text">
                                <%=campground.description%>
                            </p>
                            <p class="card-text text-muted">
                                <%=campground.location%>
                            </p>
                            <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">View</a>
                            <%=campground.title%></a>
                        </div>
                    </div>
                </div>
            </div>
            <%}%>
    </ul>